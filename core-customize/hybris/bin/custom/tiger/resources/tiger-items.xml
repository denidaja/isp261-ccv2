		<itemtype code="Loyalty" autocreate="true" generate="true" extends="GenericItem">
			<deployment table="Loyalty" typecode="12000" />
			<attributes>
				<attribute qualifier="orderNumber" type="java.lang.String">
					<persistence type="property" />
					<modifiers initial="true" optional="false" />
				</attribute>
				<attribute qualifier="loyalty" type="java.lang.Integer">
